<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="roleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class=""><%= t "roles.change_role" %>: <%= @user.email %> </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_for [:admin, @user], remote: true do |f| %>
        <div class="modal-body">
          <div>
            <% @roles.each do |role| %>
              <div class="form-check">
                <input class="form-check-input" name="radioRole" type="radio" id="flexRadio<%= role.id %>" value="<%= role.slug %>" <%= "checked" if @user.role == role %>>
                <label class="form-check-label"><%= t("roles.#{role.slug}") %></label>
              </div>
            <% end %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t "close" %></button>
          <%= f.submit t("save"), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
