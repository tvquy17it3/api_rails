document.getElementById("User<%= @user.id %>").value = "<%= t "roles.#{@user.role_slug}" %>";
<% flash.each do |type, message| %>
     <% type = 'success' if type == 'notice' %>
     <% type = 'error'   if type == 'alert' %>
     <% type = 'error'   if type == 'danger' %>
     <% if type == 'success'%>
        $('#modal').modal('hide');
     <% end %>
     toastr.<%= type %>("<%= message %>");
<% end %>
