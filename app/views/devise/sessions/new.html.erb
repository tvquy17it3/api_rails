<div class="img bg-sign">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section"><%= t "signin.login" %></h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
		      	<h3 class="mb-4 text-center"><%= t "signin.have_an_account" %></h3>
						<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
							<% flash.each do |message_type, message| %>
								<div class="alert alert-danger"><%= message %></div>
							<% end %>
							<div class="signin-form">
								<div class="form-group">
									<%= f.email_field :email ,class: "form-control", placeholder: "Email",
									 		autocomplete: "email", :required => true %>
								</div>
								<div class="form-group">
									<%= f.password_field :password, class: "form-control", placeholder: t("signin.password"),
									autocomplete: "current-password", :required => true %>
								</div>
								<div class="form-group">
									<%= f.submit t("signin.login"), class: "form-control btn btn-primary submit px-3" %>
								</div>
								<div class="form-group d-md-flex">
									<div class="w-50">
										<% if devise_mapping.rememberable? %>
												<%= f.label :remember_me, class: "checkbox-wrap checkbox-primary" do %>
													<%= f.check_box :remember_me, checked: true, class: "font-weight-bold" %>
													<span class="checkmark"></span><%= t "signin.remember" %>
												<% end %>
										<% end %>
									</div>
									<div class="w-50 text-md-right">
										<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
											<%= link_to t("signin.forgot_password"), new_password_path(resource_name), class: "text-light font-weight-bold" %><br />
										<% end %>
									</div>
								</div>
							</div>
							<%= render "devise/shared/linksshort" %>
						<% end %>
		      </div>
				</div>
			</div>
		</div>
		</section>
<div/>
